{{#if canEdit}}
  <form class="form edit-form" data-id="{{id}}">
    <div class="form-group">
      <label for="name-edit">Title</label>
      <input id="name-edit" class="form-input" value="{{name}}"/>
    </div>
    <div class="form-group">
      <label for="description-edit">Content</label>
      <textarea id="description-edit" class="form-input">{{description}}</textarea>
    </div>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>
      <button type="submit" class="btn btn-primary">Update Post</button>
    </p>
  </form>
  <button data-id="{{id}}" class="btn btn-primary delete-btn">Delete Post</button>
{{else}}
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
{{/if}}

<script src="/js/editPost.js"></script>
